<%- include('../../partials/header.ejs'); %>

<div class="container my-5" style="width: 600px;">
    <div class="card">
        <div class="card-header text-center">
            <h3>Acesse com a sua conta</h3>
        </div>
        <div class="card-body">
            <form action="/authenticate" method="POST">

                <input type="email" name="email" class="form-control mb-3" placeholder="Insira o seu e-mail"  required/>
                <!-- <hr> -->

                <input type="password" name="password" id="password" class="form-control mb-3" placeholder="Insira a sua senha" required/>
                <!-- <hr> -->
                <input type="submit" class="btn btn-success btn-lg btn-block mb-4" value="Acessar">
                
                <div class="text-center">
                    <a href="/admin/users/create">Criar uma nova conta</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../../partials/footer.ejs"); %>