<%- include('partials/header.ejs'); %>
<%- include('partials/navbar.ejs'); %>

    <div class="container">
        <hr>

        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>

        <hr>
        <form action="/responder" method="POST">
            <h3>Resposta:</h3>
            <textarea name="corpo" class="form-control"></textarea>
            <input type="hidden" name="idPergunta" value="<%= pergunta.id %>"/>
            <button type="submit" class="btn btn-warning my-3">Responder</button>
        </form>
        <hr>
        
        <h3>Respostas anteriores</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
                    
            <p><%= resposta.corpo %></p>
            <hr>
        <% }); %>
    </div>
<%- include('partials/footer.ejs'); %>