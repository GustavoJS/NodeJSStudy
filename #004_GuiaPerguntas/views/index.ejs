<%- include('partials/header.ejs'); %>
<%- include('partials/navbar.ejs'); %>
    <section class="jumbotron text-center">
        <h1 class="display-4">Bem vindo ao portal de Perguntas e Respostas</h1>
        <!-- <caption>-- Projeto baseado na plataforma Yahoo Respostas --</caption> -->

        <a href="/perguntar" class="btn btn-success btn-lg active">Faça sua pergunta</a>
    </section>
    <div class='container'>

        
        <% perguntas.forEach(pergunta => { %>
            <div class="card">
                <div class="card-body">
                    <div class="">
                        <h3 class="card-title"><%= pergunta.titulo %></h3> 
                        <p class="card-text"><%= pergunta.descricao %></p>

                        <!-- <button class="btn btn-primary">Responder</button> -->
                        <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                    </div>
                    <div class="text-right">
                        <small>Data de publicação: <%= pergunta.createdAt %></small>
                    </div>
                </div>

            </div>
            <hr>
        <% });%>


    </div>

<%- include('partials/footer.ejs'); %>